{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "stripInternal": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
